    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo_vibhinna"
        android:theme="@style/VibhinnaTheme" >
        <provider
            android:name="com.vibhinna.binoy.VibhinnaProvider"
            android:authorities="com.vibhinna.binoy.VibhinnaProvider"
            android:multiprocess="true" >
        </provider>

        <activity
            android:name=".VibhinnaActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Preferences" >
        </activity>
    </application>

</manifest>